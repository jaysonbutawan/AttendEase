<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- White background -->
    <solid android:color="@android:color/white" />

    <!-- Soft shadow-like border -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0" />

    <!-- Optional padding inside the dialog background -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

</shape>
