<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f8fafc"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvSubjectName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/data_structures"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1e40af" />

                <TextView
                    android:id="@+id/tvRoomCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cs_101"
                    android:textStyle="bold"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#64748b"
                    android:background="@drawable/badge_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    app:drawableStartCompat="@drawable/classroom" />
            </LinearLayout>

            <!-- Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/clock"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_09_00_am_10_30_am"
                    android:textSize="16sp"
                    android:textColor="#475569" />
            </LinearLayout>

            <!-- Location Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/schedule"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_25th_dec_2024"
                    android:textSize="14sp"
                    android:textColor="#475569" />
            </LinearLayout>

            <Button
                android:id="@+id/startClassButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_class_session"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:paddingVertical="12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>